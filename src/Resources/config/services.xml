<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- General -->
        <service id="webgriffe_sylius_akeneo.command.consume" class="Webgriffe\SyliusAkeneoPlugin\Command\ConsumeCommand">
            <argument type="service" id="webgriffe_sylius_akeneo_plugin.repository.queue_item" />
            <argument type="service" id="webgriffe_sylius_akeneo.product.importer" />
            <tag name="console.command" />
        </service>

        <service id="webgriffe_sylius_akeneo.api_client" class="Webgriffe\SyliusAkeneoPlugin\ApiClient" />
        <service id="Webgriffe\SyliusAkeneoPlugin\ApiClientInterface" alias="webgriffe_sylius_akeneo.api_client" />

        <service id="webgriffe_sylius_akeneo.product.value_handler_resolver" class="Webgriffe\SyliusAkeneoPlugin\PriorityValueHandlerResolver" />

        <!-- Product Importer -->
        <service id="webgriffe_sylius_akeneo.product.categories_handler" class="Webgriffe\SyliusAkeneoPlugin\Product\CategoriesHandler">
            <argument type="service" id="sylius.repository.taxon" />
            <argument type="service" id="sylius.repository.product_taxon" />
            <argument type="service" id="sylius.factory.product_taxon" />
        </service>
        <service id="Webgriffe\SyliusAkeneoPlugin\Product\CategoriesHandlerInterface" alias="webgriffe_sylius_akeneo.product.categories_handler" />

        <service id="webgriffe_sylius_akeneo.product.family_variant_handler" class="Webgriffe\SyliusAkeneoPlugin\Product\FamilyVariantHandler">
            <argument type="service" id="sylius.factory.product_option" />
            <argument type="service" id="sylius.repository.product_option" />
            <argument type="service" id="webgriffe_sylius_akeneo.api_client"/>
        </service>
        <service id="Webgriffe\SyliusAkeneoPlugin\Product\FamilyVariantHandlerInterface" alias="webgriffe_sylius_akeneo.product.family_variant_handler" />

        <service id="webgriffe_sylius_akeneo.product.importer" class="Webgriffe\SyliusAkeneoPlugin\Product\Importer">
            <argument type="service" id="sylius.factory.product_variant" />
            <argument type="service" id="sylius.repository.product_variant" />
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="webgriffe_sylius_akeneo.api_client" />
            <argument type="service" id="webgriffe_sylius_akeneo.product.value_handler_resolver" />
            <argument type="service" id="sylius.factory.product" />
            <argument type="service" id="webgriffe_sylius_akeneo.product.categories_handler" />
            <argument type="service" id="webgriffe_sylius_akeneo.product.family_variant_handler" />
            <argument type="service" id="event_dispatcher" />
        </service>
    </services>
</container>

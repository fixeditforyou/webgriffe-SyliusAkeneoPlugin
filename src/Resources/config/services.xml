<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- General -->
        <service id="webgriffe_sylius_akeneo.command.consume" class="Webgriffe\SyliusAkeneoPlugin\Command\ConsumeCommand">
            <argument type="service" id="webgriffe_sylius_akeneo.product_model.importer" />
            <tag name="console.command" />
        </service>

        <service id="webgriffe_sylius_akeneo.api_client" class="Webgriffe\SyliusAkeneoPlugin\ApiClient" />
        <service id="Webgriffe\SyliusAkeneoPlugin\ApiClientInterface" alias="webgriffe_sylius_akeneo.api_client" />

        <!-- Product Model -->
        <service id="webgriffe_sylius_akeneo.product_model.value_handlers_registry" class="Webgriffe\SyliusAkeneoPlugin\ProductModel\ValueHandlersRegistry">
            <call method="add">
                <argument type="service" id="webgriffe_sylius_akeneo.product_model.name_value_handler" />
            </call>
        </service>
        <service id="Webgriffe\SyliusAkeneoPlugin\ProductModel\ValueHandlersRegistryInterface" alias="webgriffe_sylius_akeneo.product_model.value_handlers_registry" />

        <service id="webgriffe_sylius_akeneo.product_model.name_value_handler" class="Webgriffe\SyliusAkeneoPlugin\ProductModel\NameValueHandler">
            <argument type="service" id="sylius.factory.product_translation" />
        </service>

        <service id="webgriffe_sylius_akeneo.product_model.categories_handler" class="Webgriffe\SyliusAkeneoPlugin\ProductModel\CategoriesHandler">
            <argument type="service" id="sylius.repository.taxon" />
            <argument type="service" id="sylius.repository.product_taxon" />
            <argument type="service" id="sylius.factory.product_taxon" />
        </service>
        <service id="Webgriffe\SyliusAkeneoPlugin\ProductModel\CategoriesHandlerInterface" alias="webgriffe_sylius_akeneo.product_model.categories_handler" />

        <service id="webgriffe_sylius_akeneo.product_model.family_variant_handler" class="Webgriffe\SyliusAkeneoPlugin\ProductModel\FamilyVariantHandler">
            <argument type="service" id="sylius.factory.product_option" />
            <argument type="service" id="sylius.repository.product_option" />
            <argument type="service" id="webgriffe_sylius_akeneo.api_client"/>
        </service>
        <service id="Webgriffe\SyliusAkeneoPlugin\ProductModel\FamilyVariantHandlerInterface" alias="webgriffe_sylius_akeneo.product_model.family_variant_handler" />

        <service id="webgriffe_sylius_akeneo.product_model.importer" class="Webgriffe\SyliusAkeneoPlugin\ProductModel\Importer">
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="sylius.factory.product" />
            <argument type="service" id="webgriffe_sylius_akeneo.product_model.categories_handler" />
            <argument type="service" id="webgriffe_sylius_akeneo.product_model.family_variant_handler" />
            <argument type="service" id="webgriffe_sylius_akeneo.product_model.value_handlers_registry" />
            <argument type="service" id="webgriffe_sylius_akeneo.api_client" />
        </service>
    </services>
</container>
